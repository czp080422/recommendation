.search-wrap {
    position: relative;
    width: 100%;
    padding: 5px;
    background-color: #fff;
    height: 30px;
}

.search-in {
    position: absolute;
    right: 20px;
    left: 10px;
    padding-left: 26px;
    border: 1px solid #eee;
    border-radius: 4px;
    height: 28px;
}

.search-icon {
    position: absolute;
    top: 12px;
    left: 17px;
}

.input-placeholder {
    color: #ccc;
    font-size: 0.7rem;
}