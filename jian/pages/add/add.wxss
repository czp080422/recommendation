.container{
    padding: 1rem;
    font-size: 0.9rem;
    line-height: 1.5rem;
    background-color: #fff;
}
.row{
    display: flex;
    align-items: center;
    justify-content: flex-start;
    margin-bottom: 0.8rem;
}
.row text{
    flex: 0 0 auto;
    text-align: right;
}
.self-text {
    align-self: flex-start;
}
.row textarea{
    font-size: 0.8rem;
    color: #666;
    flex: 1 1 auto;
    border: 1px solid #eeeeee;
    border-radius: 0.3rem;
    padding: 0.3rem;
    height: 6rem;
}
.row input{
    font-size: 0.8rem;
    color: #666;
    flex: 1 1 auto;
    border: 1px solid #eeeeee;
    display: inline-block;
    border-radius: 0.3rem;
    padding: 0.3rem;
}
.input-placeholder {
    color: #ccc;
    font-size: 0.7rem;
}
.textarea-placeholder {
    color: #ccc;
    font-size: 0.7rem;
}
.row button{
    flex-grow: 1;
    padding: 0 2rem;
}

input:focus
{ 
background-color:yellow;
}